  | RISCVSRA  -> RISCV_SRA
  | RISCVOR   -> RISCV_OR
  | RISCVAND  -> RISCV_AND

let translate_ropw op = match op with
  | RISCVADDW -> RISCV_ADDW
  | RISCVSUBW -> RISCV_SUBW
