(rule
 (target manifest.ml)
 (mode fallback)
 (action
  (with-outputs-to
   %{target}
   (chdir
    %{workspace_root}
    (run sail_manifest -gen_manifest)))))

(executable
 (name sail)
 (public_name sail)
 (package sail)
 (link_flags -linkall)
 (libraries libsail linenoise dynlink))

; For legacy reasons install all the Sail files in lib as part of this package

